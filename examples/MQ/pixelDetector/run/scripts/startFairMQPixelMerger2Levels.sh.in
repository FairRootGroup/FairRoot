#!/bin/bash

MAXINDEX="--max-index -1"
TRANSPORT="--transport zeromq"
VERBOSE="--severity DEBUG"

while [[ $# > 1 ]]
do
key="$1"

case $key in
    -m|--max-index)
    MAXINDEX="--max-index $2"
    shift
    ;;
    -t|--transport)
    TRANSPORT="--transport $2"
    shift
    ;;
    -v|--verbose)
    VERBOSE="--severity $2"
    shift
    ;;
esac
shift
done


########################### Define some variables
# JSON file containing the configuration parameters of all FairMQ devices of this example
MQCONFIGFILE="@PIXEL_FILE_LOCATION@/examples/MQ/pixelDetector/run/options/PixelMQConfig_Merger2Levels.json"
# ASCII and ROOT parameter files for the processor device
ROOTPARAM="@PIXEL_FILE_LOCATION@/examples/MQ/pixelDetector/macros/pixel_TGeant3.params.root"
ASCIIPARAM="@PIXEL_FILE_LOCATION@/examples/MQ/pixelDetector/param/pixel_digi.par"

# input file and branch for the sampler device
# READ FROM ASCII FILES
#SAMPLERTYPE="--sampler-type PixelDigiSource"
#INPUTFILE1="@PIXEL_FILE_LOCATION@/examples/MQ/pixelDetector/macros/digis.p0.dat"
#INPUTFILE2="@PIXEL_FILE_LOCATION@/examples/MQ/pixelDetector/macros/digis.p1.dat"
#INPUTFILE3="@PIXEL_FILE_LOCATION@/examples/MQ/pixelDetector/macros/digis.p2.dat"
# READ FROM BINARY FILES
SAMPLERTYPE="--sampler-type PixelDigiBinSource"
INPUTFILE1="@PIXEL_FILE_LOCATION@/examples/MQ/pixelDetector/macros/digisBin.p0.dat"
INPUTFILE2="@PIXEL_FILE_LOCATION@/examples/MQ/pixelDetector/macros/digisBin.p1.dat"
INPUTFILE3="@PIXEL_FILE_LOCATION@/examples/MQ/pixelDetector/macros/digisBin.p2.dat"

INPUTBRANCH="PixelDigis"

FAIRTASKNAME1="--task-name PixelFindHits"

FAIRTASKNAME4="--task-name PixelFindTracks"

# output file for sink
OUTPUTFILE="@PIXEL_FILE_LOCATION@/examples/MQ/pixelDetector/macros/MQ.pixel_TGeant3.tracksFromBinary.root"
OUTPUTCLASS="--class-name TClonesArray(PixelTrack)"
OUTPUTBRANCH="--branch-name PixelTracks"
#OUTPUTCLASS="--class-name TClonesArray(PixelTrack)"
#OUTPUTBRANCH="--branch-name PixelTracks"
###########################



########################### Start the chain of the devices


########################## start Parameter server
SERVER="parmq-server $TRANSPORT"
SERVER+=" --id parmq-server --mq-config $MQCONFIGFILE --channel-name data"
SERVER+=" --first-input-name $ROOTPARAM --second-input-name $ASCIIPARAM --second-input-type ASCII"
xterm -geometry 80x25+500+700 -hold -e @FAIRROOT_BIN_LOCATION@/$SERVER &


########################## start SAMPLER1
SAMPLER1="pixel-sampler $TRANSPORT"
SAMPLER1+=" --id sampler1 $SAMPLERTYPE --mq-config $MQCONFIGFILE --severity info"
SAMPLER1+=" --file-name $INPUTFILE1 --branch-name $INPUTBRANCH --branch-name EventHeader. $MAXINDEX"
xterm -geometry 80x25+0+0 -hold -e @PIXEL_BIN_LOCATION@/$SAMPLER1 &

########################## start PROCESSORs 1_1 & 1_2
PROCESSOR1_1="pixel-processor $TRANSPORT"
PROCESSOR1_1+=" $VERBOSE"
PROCESSOR1_1+=" --id processor1_1 $FAIRTASKNAME1 --mq-config $MQCONFIGFILE"
#xterm +aw -geometry 100x27+800+0 -hold -e @PIXEL_BIN_LOCATION@/$PROCESSOR1 &
xterm -geometry 40x12+0+170 -hold -e @PIXEL_BIN_LOCATION@/$PROCESSOR1_1 &

PROCESSOR1_2="pixel-processor $TRANSPORT"
PROCESSOR1_2+=" $VERBOSE"
PROCESSOR1_2+=" --id processor1_2 $FAIRTASKNAME1 --mq-config $MQCONFIGFILE"
#xterm +aw -geometry 100x27+800+0 -hold -e @PIXEL_BIN_LOCATION@/$PROCESSOR1 &
xterm -geometry 40x12+250+170 -hold -e @PIXEL_BIN_LOCATION@/$PROCESSOR1_2 &

########################## start SAMPLER2
SAMPLER2="pixel-sampler $TRANSPORT"
SAMPLER2+=" --id sampler2 $SAMPLERTYPE --mq-config $MQCONFIGFILE"
SAMPLER2+=" --file-name $INPUTFILE2 --branch-name $INPUTBRANCH --branch-name EventHeader. $MAXINDEX"
xterm -geometry 80x12+500+0 -hold -e @PIXEL_BIN_LOCATION@/$SAMPLER2 &

########################## start PROCESSORs 2_1 & 2_2
PROCESSOR2_1="pixel-processor $TRANSPORT"
PROCESSOR2_1+=" $VERBOSE"
PROCESSOR2_1+=" --id processor2_1 $FAIRTASKNAME1 --mq-config $MQCONFIGFILE"
xterm -geometry 40x12+500+170 -hold -e @PIXEL_BIN_LOCATION@/$PROCESSOR2_1 &

PROCESSOR2_2="pixel-processor $TRANSPORT"
PROCESSOR2_2+=" $VERBOSE"
PROCESSOR2_2+=" --id processor2_2 $FAIRTASKNAME1 --mq-config $MQCONFIGFILE"
xterm -geometry 40x12+750+170 -hold -e @PIXEL_BIN_LOCATION@/$PROCESSOR2_2 &

########################## start SAMPLER3
SAMPLER3="pixel-sampler $TRANSPORT"
SAMPLER3+=" --id sampler3 $SAMPLERTYPE --mq-config $MQCONFIGFILE"
SAMPLER3+=" --file-name $INPUTFILE3 --branch-name $INPUTBRANCH --branch-name EventHeader. $MAXINDEX"
xterm -geometry 80x12+1000+0 -hold -e @PIXEL_BIN_LOCATION@/$SAMPLER3 &

########################## start PROCESSORs 3_1 & 3_2
PROCESSOR3_1="pixel-processor $TRANSPORT"
PROCESSOR3_1+=" $VERBOSE"
PROCESSOR3_1+=" --id processor3_1 $FAIRTASKNAME1 --mq-config $MQCONFIGFILE"
xterm -geometry 40x12+1000+170 -hold -e @PIXEL_BIN_LOCATION@/$PROCESSOR3_1 &

PROCESSOR3_2="pixel-processor $TRANSPORT"
PROCESSOR3_2+=" $VERBOSE"
PROCESSOR3_2+=" --id processor3_2 $FAIRTASKNAME1 --mq-config $MQCONFIGFILE"
xterm -geometry 40x12+1250+170 -hold -e @PIXEL_BIN_LOCATION@/$PROCESSOR3_2 &

########################## start MERGER
MERGER="pixel-merger $TRANSPORT"
MERGER+=" --id merger1 --mq-config $MQCONFIGFILE"
xterm +aw -geometry 80x50+0+350 -hold -e @PIXEL_BIN_LOCATION@/$MERGER &

########################## start PROCESSORs 4_1, 4_2 & 4_3
PROCESSOR4_1="pixel-processor $TRANSPORT"
PROCESSOR4_1+=" $VERBOSE"
PROCESSOR4_1+=" --id processor4_1 $FAIRTASKNAME4 --mq-config $MQCONFIGFILE"
xterm -geometry 80x12+500+350 -hold -e @PIXEL_BIN_LOCATION@/$PROCESSOR4_1 &

PROCESSOR4_2="pixel-processor $TRANSPORT"
PROCESSOR4_2+=" $VERBOSE"
PROCESSOR4_2+=" --id processor4_2 $FAIRTASKNAME4 --mq-config $MQCONFIGFILE"
xterm -geometry 80x12+500+520 -hold -e @PIXEL_BIN_LOCATION@/$PROCESSOR4_2 &

PROCESSOR4_3="pixel-processor $TRANSPORT"
PROCESSOR4_3+=" $VERBOSE"
PROCESSOR4_3+=" --id processor4_3 $FAIRTASKNAME4 --mq-config $MQCONFIGFILE"
xterm -geometry 80x12+1000+350 -hold -e @PIXEL_BIN_LOCATION@/$PROCESSOR4_3 &

########################## start FILESINK
FILESINK="pixel-sink $TRANSPORT"
FILESINK+=" --id sink1 --mq-config $MQCONFIGFILE"
FILESINK+=" --file-name $OUTPUTFILE --class-name FairEventHeader --branch-name EventHeader. $OUTPUTCLASS $OUTPUTBRANCH"
xterm +aw -geometry 80x25+1000+700 -hold -e @PIXEL_BIN_LOCATION@/$FILESINK &
